#!/bin/bash
# Wanda Voice Assistant Launcher

cd "$(dirname "$0")"

echo "=== WANDA VOICE ASSISTANT MVP ==="
echo ""

# Check if venv exists
if [ ! -d "venv" ]; then
    echo "‚ùå Virtual environment not found!"
    echo "   Run: python3 -m venv venv && source venv/bin/activate && pip install -r requirements.txt"
    exit 1
fi

# Check if input group is active (for global hotkey)
if groups | grep -q input; then
    echo "‚úÖ Input group active - global hotkey (RIGHT CTRL) will work"
else
    echo "‚ö†Ô∏è  Input group NOT active"
    echo "   For global hotkeys: sudo usermod -a -G input \$USER"
    echo "   Then: Logout and login again"
fi

echo ""
echo "üéôÔ∏è  Starting Wanda..."
echo ""

# Activate venv and run
source venv/bin/activate
python3 main.py "$@"

