{
  "$schema": "https://opencode.ai/config.json",
  "model": "google/antigravity-gemini-3-flash",
  
  // === STABLE PROFILE: Minimal, Robust, Daily Driver ===
  
  "plugin": [
    // Auth: Nur Antigravity (Multi-Account Rotation via accounts.json)
    "opencode-antigravity-auth@1.4.3",
    
    // Memory: Supermemory (Free Plan)
    "opencode-supermemory@latest",
    
    // Safety: Destructive commands blocken
    // Install: npm install -g cc-safety-net (oder als plugin wenn verfügbar)
    // Alternative: Eingebaute tool permissions nutzen
    
    // Knowledge: Lokales Wissen (keine externen APIs)
    "opencode-knowledge@latest"
  ],
  
  "agent": {
    // Nur 1 Agent: Claude Sonnet 4.5 für Coding
    "software-engineer": {
      "mode": "primary",
      "model": "google/antigravity-claude-sonnet-4-5",
      "temperature": 0.2
    }
  },
  
  "provider": {
    "google": {
      "name": "Google",
      "models": {
        "antigravity-gemini-3-flash": {
          "name": "Gemini 3 Flash (Antigravity)",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] },
          "variants": {
            "minimal": { "thinkingLevel": "minimal" },
            "low": { "thinkingLevel": "low" },
            "medium": { "thinkingLevel": "medium" },
            "high": { "thinkingLevel": "high" }
          }
        },
        "antigravity-claude-sonnet-4-5": {
          "name": "Claude Sonnet 4.5 (Antigravity)",
          "limit": { "context": 200000, "output": 64000 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] }
        }
      }
    }
  },
  
  // Tool Permissions: Safety-First
  "permissions": {
    "bash": { "default": "ask", "edit": "ask" },
    "edit": { "default": "ask" },
    "write": { "default": "ask" },
    "delete": { "default": "ask" }
  },
  
  "default_agent": "software-engineer"
}
