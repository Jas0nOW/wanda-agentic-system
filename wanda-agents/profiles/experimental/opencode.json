{
  "$schema": "https://opencode.ai/config.json",
  "model": "google/antigravity-gemini-3-flash",
  "plugin": [
    "oh-my-opencode@3.2.1",
    "micode@latest",
    "opencode-antigravity-auth@1.4.3",
    "opencode-antigravity-quota@latest",
    "opencode-supermemory@latest",
    "opencode-handoff@latest",
    "opencode-scheduler@latest",
    "opencode-knowledge@latest"
  ],
  "agent": {
    "sisyphus": {
      "description": "Orchestrator mit Quick-Mode Decision Engine",
      "mode": "primary",
      "model": "google/antigravity-gemini-3-flash",
      "temperature": 0.2
    },
    "brainstormer": {
      "description": "Ideator - Design-First Workflow",
      "mode": "primary",
      "model": "google/antigravity-gemini-3-pro",
      "temperature": 0.7
    },
    "architect": {
      "description": "Grounder - Blueprint erstellen",
      "mode": "subagent",
      "model": "google/antigravity-claude-opus-4-5-thinking",
      "thinking": {
        "type": "enabled",
        "budgetTokens": 32000
      }
    },
    "software-engineer": {
      "description": "Builder - Implementierung",
      "mode": "subagent",
      "model": "google/antigravity-claude-sonnet-4-5",
      "temperature": 0.2
    },
    "audit": {
      "description": "Fixer + Reviewer - Zero-Trust",
      "mode": "subagent",
      "model": "google/antigravity-claude-opus-4-5-thinking",
      "thinking": {
        "type": "enabled",
        "budgetTokens": 32000
      }
    },
    "oracle": {
      "description": "Think Tank - Deep Reasoning",
      "mode": "subagent",
      "model": "google/antigravity-claude-opus-4-5-thinking",
      "thinking": {
        "type": "enabled",
        "budgetTokens": 63999
      }
    },
    "librarian": {
      "description": "Researcher - RAG & Fact Verification",
      "mode": "subagent",
      "model": "google/antigravity-gemini-3-flash"
    },
    "writer": {
      "description": "Tech Writer",
      "mode": "subagent",
      "model": "google/antigravity-gemini-3-flash"
    },
    "explore": {
      "description": "Codebase Mapper - Mermaid-JS Graphs",
      "mode": "subagent",
      "model": "google/antigravity-gemini-3-flash"
    },
    "multimodal-looker": {
      "description": "Visual Analyst - PDFs, Images, Diagrams",
      "mode": "subagent",
      "model": "google/antigravity-gemini-3-pro"
    },
    "frontend-ui-ux": {
      "description": "Designer - DTCG Design Tokens, ARIA-first",
      "mode": "subagent",
      "model": "google/antigravity-gemini-3-pro"
    },
    "codebase-locator": {
      "description": "File Finder (Read-Only)",
      "mode": "subagent",
      "model": "google/antigravity-gemini-3-flash"
    },
    "codebase-analyzer": {
      "description": "Code Explainer (Read-Only)",
      "mode": "subagent",
      "model": "google/antigravity-gemini-3-flash"
    },
    "pattern-finder": {
      "description": "Pattern Scout (Read-Only)",
      "mode": "subagent",
      "model": "google/antigravity-gemini-3-flash"
    },
    "ledger-creator": {
      "description": "Continuity Keeper - Session State",
      "mode": "subagent",
      "model": "google/antigravity-gemini-3-flash"
    },
    "artifact-searcher": {
      "description": "History Scout",
      "mode": "subagent",
      "model": "google/antigravity-gemini-3-flash"
    },
    "metis": {
      "description": "Pre-Planning Consultant",
      "mode": "subagent",
      "model": "google/antigravity-claude-opus-4-5-thinking",
      "thinking": {
        "type": "enabled",
        "budgetTokens": 32000
      }
    },
    "momus": {
      "description": "Plan Reviewer",
      "mode": "subagent",
      "model": "google/antigravity-claude-opus-4-5-thinking",
      "thinking": {
        "type": "enabled",
        "budgetTokens": 32000
      }
    }
  },
  "provider": {
    "google": {
      "name": "Google",
      "models": {
        "antigravity-gemini-3-pro": {
          "name": "Gemini 3 Pro (Antigravity)",
          "limit": {
            "context": 1048576,
            "output": 65535
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "low": {
              "thinkingLevel": "low"
            },
            "high": {
              "thinkingLevel": "high"
            }
          }
        },
        "antigravity-gemini-3-flash": {
          "name": "Gemini 3 Flash (Antigravity)",
          "limit": {
            "context": 1048576,
            "output": 65536
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "minimal": {
              "thinkingLevel": "minimal"
            },
            "low": {
              "thinkingLevel": "low"
            },
            "medium": {
              "thinkingLevel": "medium"
            },
            "high": {
              "thinkingLevel": "high"
            }
          }
        },
        "antigravity-claude-sonnet-4-5": {
          "name": "Claude Sonnet 4.5 (Antigravity)",
          "limit": {
            "context": 200000,
            "output": 64000
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          }
        },
        "antigravity-claude-opus-4-5-thinking": {
          "name": "Claude Opus 4.5 Thinking (Antigravity)",
          "limit": {
            "context": 200000,
            "output": 64000
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "low": {
              "thinkingConfig": {
                "thinkingBudget": 8192
              }
            },
            "max": {
              "thinkingConfig": {
                "thinkingBudget": 32768
              }
            }
          }
        }
      }
    }
  },
  "permission": {
    "bash": "ask",
    "edit": "ask",
    "write": "ask"
  },
  "default_agent": "sisyphus"
}