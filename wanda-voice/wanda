#!/bin/bash
# ==============================================================================
# WANDA CLI v1.1.0 - Sovereign AI OS
# ==============================================================================
# Usage: wanda [command]
# Commands: (none)=full, voice, code, status, help
# ==============================================================================

WANDA_DIR="${WANDA_INSTALL_DIR:-$HOME/.wanda-system}"
VOICE_DIR="$HOME/Schreibtisch/Work-OS/10_LTL_Core/12_Internal_Tools/12.06_Wanda_Agentic-System/wanda-voice"
VERSION="1.1.0"
PID_FILE="/tmp/wanda-voice.pid"

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
CYAN='\033[0;36m'
MAGENTA='\033[0;35m'
NC='\033[0m'

print_banner() {
    echo -e "${MAGENTA}"
    echo "╔══════════════════════════════════════════════════════════════╗"
    echo "║     ██╗    ██╗ █████╗ ███╗   ██╗██████╗  █████╗             ║"
    echo "║     ██║    ██║██╔══██╗████╗  ██║██╔══██╗██╔══██╗            ║"
    echo "║     ██║ █╗ ██║███████║██╔██╗ ██║██║  ██║███████║            ║"
    echo "║     ██║███╗██║██╔══██║██║╚██╗██║██║  ██║██╔══██║            ║"
    echo "║     ╚███╔███╔╝██║  ██║██║ ╚████║██████╔╝██║  ██║            ║"
    echo "║      ╚══╝╚══╝ ╚═╝  ╚═╝╚═╝  ╚═══╝╚═════╝ ╚═╝  ╚═╝            ║"
    echo "║           ${CYAN}Sovereign AI Voice + Code Assistant${MAGENTA}              ║"
    echo "║                      ${GREEN}v${VERSION}${MAGENTA}                                 ║"
    echo "╚══════════════════════════════════════════════════════════════╝"
    echo -e "${NC}"
}

print_help() {
    print_banner
    echo "Commands:"
    echo "  wanda              - Start Voice + OpenCode (full mode)"
    echo "  wanda voice        - Start only Voice Assistant"
    echo "  wanda voice --simple   Voice without GUI (Wayland safe)"
    echo "  wanda code         - Start only OpenCode (no voice)"
    echo "  wanda status       - Show system status"
    echo "  wanda help         - Show this help"
    echo ""
}

voice_running() {
    if [ -f "$PID_FILE" ]; then
        PID=$(cat "$PID_FILE")
        if [ -n "$PID" ] && ps -p "$PID" > /dev/null 2>&1; then
            return 0
        else
            rm -f "$PID_FILE" 2>/dev/null
        fi
    fi
    return 1
}

wait_for_voice_pid() {
    for _ in {1..20}; do
        if voice_running; then
            return 0
        fi
        sleep 0.1
    done
    return 1
}

cmd_voice() {
    print_banner
    echo -e "${CYAN}Starting Voice Assistant...${NC}"

    if voice_running; then
        echo -e "${YELLOW}Voice already running (PID: $(cat "$PID_FILE"))${NC}"
        exit 0
    fi

    if [ -d "$VOICE_DIR" ]; then
        cd "$VOICE_DIR"
        if [ -d "venv" ]; then
            source venv/bin/activate
        fi

        # Use launcher for proper environment detection
        if [ -f "launcher.py" ]; then
            exec python3 launcher.py "$@"
        else
            exec python3 main.py "$@"
        fi
    else
        echo -e "${RED}Voice assistant not found at $VOICE_DIR${NC}"
        exit 1
    fi
}

cmd_code() {
    print_banner
    echo -e "${CYAN}Starting OpenCode...${NC}"

    if command -v opencode &>/dev/null; then
        exec opencode
    elif command -v gemini &>/dev/null; then
        exec gemini
    else
        echo -e "${RED}No AI CLI found (opencode or gemini).${NC}"
        echo "Install: npm install -g @anthropic-ai/opencode"
        exit 1
    fi
}

cmd_full() {
    print_banner
    echo -e "${CYAN}Starting WANDA Full Mode (Voice + Code)...${NC}"
    echo ""

    # Start Voice in background
    if [ -d "$VOICE_DIR" ]; then
        if voice_running; then
            echo -e "${YELLOW}Voice already running (PID: $(cat "$PID_FILE"))${NC}"
        else
            echo -e "${GREEN}Starting Voice Assistant in background...${NC}"
            (
                cd "$VOICE_DIR"
                if [ -d "venv" ]; then
                    source venv/bin/activate
                fi
                python3 launcher.py > /tmp/wanda-voice.log 2>&1 &
            )
            if wait_for_voice_pid; then
                echo -e "${GREEN}✓ Voice PID: $(cat "$PID_FILE" 2>/dev/null)${NC}"
            else
                echo -e "${YELLOW}○ Voice PID not detected yet${NC}"
            fi
        fi
    fi

    # Start OpenCode in foreground
    cmd_code
}

cmd_status() {
    print_banner
    echo -e "${CYAN}System Status${NC}"
    echo "────────────────────────────────────────"
    echo -e "Version:      ${GREEN}v$VERSION${NC}"
    echo ""
    echo "Components:"
    [ -d "$VOICE_DIR" ] && echo -e "  ${GREEN}✓${NC} Voice Dir" || echo -e "  ${RED}✗${NC} Voice Dir"
    command -v opencode &>/dev/null && echo -e "  ${GREEN}✓${NC} OpenCode" || echo -e "  ${RED}✗${NC} OpenCode"
    command -v ollama &>/dev/null && echo -e "  ${GREEN}✓${NC} Ollama" || echo -e "  ${YELLOW}○${NC} Ollama (optional)"

    # Check voice PID
    if voice_running; then
        echo -e "  ${GREEN}✓${NC} Voice Running (PID: $(cat "$PID_FILE"))"
    else
        echo -e "  ${YELLOW}○${NC} Voice Not Running"
    fi
    echo ""
}

# Main
case "${1:-}" in
    voice)
        shift
        cmd_voice "$@"
        ;;
    code)
        cmd_code
        ;;
    status)
        cmd_status
        ;;
    help|--help|-h)
        print_help
        ;;
    "")
        cmd_full
        ;;
    *)
        echo -e "${RED}Unknown command: $1${NC}"
        print_help
        exit 1
        ;;
esac
