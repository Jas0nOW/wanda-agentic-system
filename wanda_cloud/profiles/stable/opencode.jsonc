{
    "$schema": "https://opencode.ai/config.json",
    // ╔════════════════════════════════════════════════════════════════╗
    // ║  WANDA STABLE PROFILE - Daily Driver Configuration             ║
    // ║  oh-my-opencode + MiCode (Visual GUI)                          ║
    // ╚════════════════════════════════════════════════════════════════╝
    // ──────────────────────────────────────────────────────────────────
    // PLUGINS (npm packages) - Tested & Stable
    // ──────────────────────────────────────────────────────────────────
    "plugin": [
        "oh-my-opencode@3.2.1",
        "micode",
        "opencode-antigravity-auth@1.4.3",
        "opencode-antigravity-quota",
        "envsitter-guard",
        "opencode-handoff",
        "opencode-websearch-cited"
    ],
    // ──────────────────────────────────────────────────────────────────
    // INSTRUCTIONS (System prompts / context files)
    // ──────────────────────────────────────────────────────────────────
    "instructions": [
        "prompts/system/OPENCODE_SYSTEM.md",
        "prompts/system/TERMINAL_POLICY.md",
        "prompts/context/MCP_TOOL_MAPPING.md",
        ".gemini/GEMINI.md"
    ],
    // ──────────────────────────────────────────────────────────────────
    // MCP SERVERS (Core set)
    // ──────────────────────────────────────────────────────────────────
    "mcp": {
        "filesystem": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@anthropic/mcp-filesystem"
            ],
            "enabled": true
        },
        "memory": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@anthropic/mcp-memory"
            ],
            "enabled": true
        },
        "docker": {
            "type": "local",
            "command": [
                "docker",
                "run",
                "-i",
                "--rm",
                "mcp/docker"
            ],
            "enabled": true
        },
        "github": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@anthropic/mcp-github"
            ],
            "enabled": true
        },
        "brave": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@anthropic/mcp-brave-search"
            ],
            "enabled": true
        },
        "context7": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@upstash/context7-mcp"
            ],
            "enabled": true
        }
    },
    // ──────────────────────────────────────────────────────────────────
    // PERMISSIONS (Conservative - ask before shell)
    // ──────────────────────────────────────────────────────────────────
    "permission": {
        "bash": "ask",
        "edit": "allow",
        "read": "allow"
    },
    // ──────────────────────────────────────────────────────────────────
    // COMPACTION (Context management)
    // ──────────────────────────────────────────────────────────────────
    "compaction": {
        "auto": true,
        "prune": false
    },
    "autoupdate": "notify"
}