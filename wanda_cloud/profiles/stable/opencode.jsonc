{
    "$schema": "https://opencode.ai/config.json",
    // ╔════════════════════════════════════════════════════════════════╗
    // ║  WANDA STABLE PROFILE - Daily Driver Configuration             ║
    // ║  oh-my-opencode + MiCode (Visual GUI)                          ║
    // ╚════════════════════════════════════════════════════════════════╝
    // ──────────────────────────────────────────────────────────────────
    // PLUGINS (npm packages) - Tested & Stable
    // ──────────────────────────────────────────────────────────────────
    "plugin": [
        "oh-my-opencode@3.2.1",
        "micode",
        "opencode-antigravity-auth@1.4.3",
        "opencode-antigravity-quota",
        "opencode-handoff@latest",
        "opencode-scheduler@latest",
        "opencode-knowledge@latest",
        "opencode-websearch-cited"
    ],
    // ──────────────────────────────────────────────────────────────────
    // INSTRUCTIONS (System prompts / context files)
    // ──────────────────────────────────────────────────────────────────
    "instructions": [
        "/home/jannis/wanda-agentic-system/prompts/AGENT_ROSTER.md",
        "/home/jannis/wanda-agentic-system/prompts/system/OPENCODE_SYSTEM.md",
        "/home/jannis/wanda-agentic-system/prompts/system/TERMINAL_POLICY.md",
        "/home/jannis/wanda-agentic-system/prompts/context/MCP_TOOL_MAPPING.md",
        "/home/jannis/wanda-agentic-system/prompts/agents/02_sisyphus.md",
        "/home/jannis/wanda-agentic-system/prompts/agents/03_prometheus.md",
        "/home/jannis/wanda-agentic-system/prompts/agents/03_software-engineer.md",
        "/home/jannis/wanda-agentic-system/.gemini/GEMINI.md"
    ],
    // ──────────────────────────────────────────────────────────────────
    // MCP SERVERS (Core set)
    // ──────────────────────────────────────────────────────────────────
    "mcp": {
        "filesystem": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@anthropic/mcp-filesystem"
            ],
            "enabled": true
        },
        "context7": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@upstash/context7-mcp"
            ],
            "enabled": true
        },
        "MCP_DOCKER": {
            "type": "local",
            "command": [
                "docker",
                "mcp",
                "gateway",
                "run"
            ],
            "enabled": true
        },
        "hostinger-web": {
            "type": "local",
            "command": [
                "bash",
                "-c",
                "API_TOKEN={{HOSTINGER_WEB_API_TOKEN}} npx -y hostinger-api-mcp"
            ],
            "enabled": false
        },
        "hostinger-vps": {
            "type": "local",
            "command": [
                "bash",
                "-c",
                "API_TOKEN={{HOSTINGER_VPS_API_TOKEN}} npx -y hostinger-api-mcp"
            ],
            "enabled": false
        }
    },
    // ──────────────────────────────────────────────────────────────────
    // PERMISSIONS (Conservative - ask before shell)
    // ──────────────────────────────────────────────────────────────────
    "permission": {
        "bash": "ask",
        "edit": "allow",
        "read": "allow"
    },
    // ──────────────────────────────────────────────────────────────────
    // COMPACTION (Context management)
    // ──────────────────────────────────────────────────────────────────
    "compaction": {
        "auto": true,
        "prune": false
    },
    "autoupdate": "notify"
}