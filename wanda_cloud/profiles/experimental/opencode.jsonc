{
    "$schema": "https://opencode.ai/config.json",
    // ╔════════════════════════════════════════════════════════════════╗
    // ║  WANDA EXPERIMENTAL PROFILE - Multi-Agent Lab                  ║
    // ║  WARNING: Multiple orchestration layers active                 ║
    // ╚════════════════════════════════════════════════════════════════╝
    // ──────────────────────────────────────────────────────────────────
    // PLUGINS (npm packages) - MULTI-AGENT STACK
    // ──────────────────────────────────────────────────────────────────
    "plugin": [
        "oh-my-opencode@3.2.1",
        "micode",
        "opencode-orchestrator",
        "opencode-antigravity-auth@1.4.3",
        "opencode-antigravity-quota",
        "envsitter-guard",
        "opencode-handoff",
        "opencode-scheduler",
        "opencode-websearch-cited",
        "opencode-shell-strategy",
        "opencode-context-analysis",
        "opencode-dynamic-context-pruning"
    ],
    // ──────────────────────────────────────────────────────────────────
    // INSTRUCTIONS (System prompts / context files)
    // ──────────────────────────────────────────────────────────────────
    "instructions": [
        "prompts/system/OPENCODE_SYSTEM.md",
        "prompts/system/TERMINAL_POLICY.md",
        "docs/02_architecture/ROUTING_MAP.md",
        ".gemini/GEMINI.md"
    ],
    // ──────────────────────────────────────────────────────────────────
    // MCP SERVERS
    // ──────────────────────────────────────────────────────────────────
    "mcp": {
        "filesystem": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@anthropic/mcp-filesystem"
            ],
            "enabled": true
        },
        "memory": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@anthropic/mcp-memory"
            ],
            "enabled": true
        },
        "docker": {
            "type": "local",
            "command": [
                "docker",
                "run",
                "-i",
                "--rm",
                "mcp/docker"
            ],
            "enabled": true
        },
        "github": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@anthropic/mcp-github"
            ],
            "enabled": true
        },
        "brave": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@anthropic/mcp-brave-search"
            ],
            "enabled": true
        },
        "playwright": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@anthropic/mcp-playwright"
            ],
            "enabled": true
        }
    },
    // ──────────────────────────────────────────────────────────────────
    // PERMISSIONS (More permissive for experimentation)
    // ──────────────────────────────────────────────────────────────────
    "permission": {
        "bash": "allow",
        "edit": "allow",
        "read": "allow"
    },
    // ──────────────────────────────────────────────────────────────────
    // COMPACTION (Pruning enabled for testing)
    // ──────────────────────────────────────────────────────────────────
    "compaction": {
        "auto": true,
        "prune": true
    },
    // ──────────────────────────────────────────────────────────────────
    // EXPERIMENTAL FEATURES
    // ──────────────────────────────────────────────────────────────────
    "experimental": {},
    "autoupdate": "notify"
}