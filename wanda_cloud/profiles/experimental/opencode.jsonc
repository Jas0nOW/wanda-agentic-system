{
    "$schema": "https://opencode.ai/config.json",
    // ╔════════════════════════════════════════════════════════════════╗
    // ║  WANDA EXPERIMENTAL PROFILE - EVERYTHING ENABLED               ║
    // ║  All plugins, all MCP servers, all features                    ║
    // ║  WARNING: May have conflicts - use for testing only            ║
    // ╚════════════════════════════════════════════════════════════════╝
    // ──────────────────────────────────────────────────────────────────
    // PLUGINS - MAXIMUM STACK (all available)
    // ──────────────────────────────────────────────────────────────────
    "plugin": [
        // Core Orchestration
        "oh-my-opencode@3.2.1",
        "micode",
        "opencode-orchestrator",
        // Authentication & Quota
        "opencode-antigravity-auth@1.4.3",
        "opencode-antigravity-quota",
        // Handoff
        "opencode-handoff",
        // Scheduling & Tasks
        "opencode-scheduler",
        // Research & Search
        "opencode-websearch-cited",
        // Context Management
        "opencode-dynamic-context-pruning"
        // DISABLED (cause freezing):
        // "opencode-shell-strategy",
        // "opencode-context-analysis"
    ],
    // ──────────────────────────────────────────────────────────────────
    // INSTRUCTIONS (All context files)
    // ──────────────────────────────────────────────────────────────────
    "instructions": [
        "prompts/AGENT_ROSTER.md",
        "prompts/system/OPENCODE_SYSTEM.md",
        "prompts/system/TERMINAL_POLICY.md",
        "prompts/context/MCP_TOOL_MAPPING.md",
        "prompts/context/AGENT_REGISTRY.md",
        "prompts/agents/01_brainstormer.md",
        "prompts/agents/02_sisyphus.md",
        "prompts/agents/03_architect.md",
        "prompts/agents/03_software_engineer.md",
        "prompts/agents/03_frontend_ui_ux.md",
        "prompts/agents/03_audit.md",
        "prompts/agents/04_oracle.md",
        "prompts/agents/04_writer.md",
        "prompts/agents/07_meta_agents.md",
        "docs/02_architecture/ROUTING_MAP.md",
        ".gemini/GEMINI.md"
    ],
    // ──────────────────────────────────────────────────────────────────
    // MCP SERVERS - ALL ENABLED
    // ──────────────────────────────────────────────────────────────────
    "mcp": {
        "filesystem": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@anthropic/mcp-filesystem"
            ],
            "enabled": true
        },
        "memory": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@anthropic/mcp-memory"
            ],
            "enabled": true
        },
        "docker": {
            "type": "local",
            "command": [
                "docker",
                "run",
                "-i",
                "--rm",
                "mcp/docker"
            ],
            "enabled": true
        },
        "github": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@anthropic/mcp-github"
            ],
            "enabled": true
        },
        "brave": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@anthropic/mcp-brave-search"
            ],
            "enabled": true
        },
        "playwright": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@anthropic/mcp-playwright"
            ],
            "enabled": true
        },
        "sequential-thinking": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@anthropic/mcp-sequential-thinking"
            ],
            "enabled": true
        },
        "context7": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@upstash/context7-mcp"
            ],
            "enabled": true
        }
    },
    // ──────────────────────────────────────────────────────────────────
    // PERMISSIONS (Fully permissive for experimentation)
    // ──────────────────────────────────────────────────────────────────
    "permission": {
        "bash": "allow",
        "edit": "allow",
        "read": "allow"
    },
    // ──────────────────────────────────────────────────────────────────
    // COMPACTION (Pruning enabled for testing)
    // ──────────────────────────────────────────────────────────────────
    "compaction": {
        "auto": true,
        "prune": true
    },
    "autoupdate": "notify"
}